generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Package {
  id         Int    @id @default(autoincrement())
  name       String
  inclusions Json
  Price      Json
  users      Data[]
}

model Data {
  id                    Int              @id @default(autoincrement())
  name                  String
  role                  Role             @default(USER)
  email                 String
  phone_number          String
  traveler_number       Int
  time_available        Time_Slot
  special_interest      Special_Interest
  Additional_note       String
  packageId             Int
  date_time             DateTime
  Additional_preference String?
  package               Package          @relation(fields: [packageId], references: [id])
  language              Language[]       @relation("UserLanguages")
}

model Language {
  id    Int    @id @default(autoincrement())
  code  String @unique
  name  String
  users Data[] @relation("UserLanguages")
}

enum Role {
  USER
  ADMIN
}

enum Special_Interest {
  FOOD
  CULTURE
  MUSIC
  HISTORY
  MARKETS
  COFFEE
  OTHER
}

enum Time_Slot {
  FEW_HOURS
  HALF_DAY
  FULL_DAY
}
